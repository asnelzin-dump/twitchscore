upstream asnelzin.ru {
    server localhost:8001 fail_timeout=0;
}

server {
    listen 80;
    server_name  www.asnelzin.ru;
    rewrite ^/(.*) http://asnelzin.ru/$1 permanent;
}

server {
    listen 80;
    client_max_body_size 4G;
    server_name asnelzin.ru;
    access_log  /home/asnelzin/twitchscore/logs/twitchscore.access.log;
    keepalive_timeout 5;

    root /home/asnelzin/twitchscore/files/static;

    location / {
        proxy_pass http://asnelzin.ru;
    }

    error_page 500 502 503 504 /500.html;
    location = /500.html {
        root /home/asnelzin/twitchscore/twitchscore/static/html;
    }

    location ~ ^/(static|media)/ {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        if (!-f $request_filename) {
            proxy_pass http://asnelzin.ru;
            break;
        }
    }
}